extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5=pagina
            
            blockquote.text-center Lee sobre nuestros clientes o sus opiniones
            .row.testimoniales
                each testimonial in testimoniales
                    .col-md-6.col-lg-4.mb-4
                        .card
                            .card-body
                                blockquote.blockquote
                                    p.mb-0
                                        | #{testimonial.mensaje}
                                    footer.blockquote-footer
                                        |#{testimonial.nombre}
            .row

                h2.d-block.w-100.text-center Agrega un testimonial

                .row.justify-content-center.col
                    .col-md-8
                        form(action="/testimoniales", method="post")
                            .form-group
                                label(for="nombre") Nombre
                                input#nombre(type="text", placeholder="Tu nombre",name="nombre",class="form-control",value=nombre,required)
            
                            .form-group
                                label(for="email") Email
                                input#email(type="email", placeholder="Tu Email",name="correo",class="form-control",value=correo,required)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", cols="20", rows="3", placeholder="Tu mensaje",value=mensaje,required)
                            input.btn.btn-success.btn-block(type="submit")